<div class="container">
  <div class="row d-flex justify-content-center">
  {{#each posts as |post| }}
  <div class="card col-md m-1">
    <div class="row g-0">
      <div class="card-body">
        <a class="card-title text-decoration-none stretched-link" href="/post/{{id}}"><h5>{{title}}</h5></a>
        <p class="card-text">{{text}}</p>
        <p class="card-text"><small class="text-body-secondary">Posted by {{user.username}} on {{format_date date_added}}</small></p>
      </div>
    </div>
  </div>
  {{/each}}
  </div>
</div>