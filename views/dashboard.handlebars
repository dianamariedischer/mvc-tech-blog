<div class="min-vh-100">
    <div class="d-flex flex-wrap gap-3 justify-content-center">
        {{#each posts as |post| }}
        <div class="card col-12">
            <div class="row g-0">
                <div class="card-body d-flex justify-content-between">
                    <a class="card-title text-decoration-none stretched-link" href="/editor/{{id}}">{{title}}</a>
                    <p>{{format_date date_added}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary position-fixed bottom-0 mb-3"><a class="nav-link stretched-link" href="/create">+ New Post</a></button>
    </div>
</div>
